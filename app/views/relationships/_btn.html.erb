<% if current_user != user %>
  <% if current_user.following?(user) %>
    <div class="d-flex justify-content-center m-1 w-100" style="gap: 10px">
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info flex-fill" %>
      <%= link_to user_direct_messages_path(user.id), class: "btn btn-primary" do %>
        <i class="fas fa-envelope"></i>
      <% end %>
    </div>
  <% else %>
    <div class="d-flex justify-content-center m-1 w-100" style="gap: 10px">
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success flex-fill" %>
    </div>
  <% end %>
<% end %>
