<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>
        User info
      </h2>
      <%= render 'users/info', user: @target %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>
        <%= @target.name %> さんとのチャット
      </h2>

      <% @messages.each do |message| %>
        <div class="mt-1 mb-1">
          <div class="p-2 border-left border-5 bg-light <%= message.from.id == current_user.id ? "border-secondary" : "border-primary" %>">
            <%= message.message %>
          </div>
        </div>
      <% end %>

      <%= form_with model: @new_message, url: user_direct_messages_path(@target.id) , local: true do |f| %>
        <div class="form-group">
          <%= f.text_area :message, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "send", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
